{
    "compilerOptions": {
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "strict": true,
      "target": "esnext",
      "module": "esnext",
      "outDir": "./lib",
      "skipLibCheck": true,
      "declaration": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
}